<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="13dp"
        android:text="BOMB - 128"
        android:textColor="@android:color/white"
        android:textSize="31sp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerInParent="true"
        android:numColumns="7"></GridView>

    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/gridview"
        android:layout_margin="7dp"
        android:src="@mipmap/ic_next_lv" />

    <LinearLayout
        android:id="@+id/sub_container1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/gridview"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/current_sun"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="23dp"
            android:src="@mipmap/ic_bomb_item" />

        <!-- <TextView
             android:id="@+id/count_sun"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="37dp"
             android:layout_marginTop="7dp"
             android:textColor="@android:color/white"
             android:textSize="23sp"
             android:textStyle="bold" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridview"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/sub_container1"
        android:text="@string/level_title"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/level_title"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/level_title"
        android:text="@string/first_value"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/high_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="@string/high_scores"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/high_score_title"
        android:layout_marginRight="61dp"
        android:text="@string/first_value"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

</RelativeLayout>